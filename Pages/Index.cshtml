@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<table class="table table-striped table-sm">
    <thead>
        <tr>
            <th>Vendor</th>
            <th>Links</th>
            <th>Support Info</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var vendor in Model.Vendor)
        {
            <tr>
                <td><a href="@vendor.mainUrl"><img src="/logo/@vendor.logo" alt="@vendor.vendorName" width="100px"></a></td>
                <td>
                    @foreach(var link in vendor.links){<a href="@link.url">@link.systemName</a><br />}
                </td>
                <td>
                    @if(vendor.supportEmail != null ) { <a href="mailto:@vendor.supportEmail">@vendor.supportEmail</a><br />    }
                    @if(vendor.supportUrl != null   ) { <a href="@vendor.supportUrl">Web Support</a><br />                      }
                    @if(vendor.supportPhone != null ) { @vendor.supportPhone<br />                                              }
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/Vendors" class="btn btn-primary">Manage Vendors</a>
<a href="/Links" class="btn btn-primary">Manage Links</a>